body {
  -webkit-text-size-adjust: 100%;
  padding-top: 60px;
}

$navbar-bg-color: #435043;
$navbar-bg-color-to: #304030;
$mewlist-green-bg: #308030;
$mewlist-green: #95FF7F;

.mewlist {
  .logo {
    height: 22px;
    width: 27px;
    margin-right: 8px;
    float: left;
    .image {
      height: 28px;
      width: 24px;
      position: relative;
      top: -4px;
      left: 0px;
      background-image: url('<%= asset_data_uri "m20flat.png" %>');
    }
  }

  .sns {
    a {
      margin: 10px 10px 10px 10px;
      padding: 0;
      width: 29px;
      height: 29px;
      display: block;
      float:left;
    }
    #facebook {
      background-image: url('<%= asset_data_uri "FB-f-Logo__blue_29.png" %>');
    }
    #twitter {
      background-image: url('<%= asset_data_uri "twitter-bird-light-bgs-29.png" %>');
    }
    #github {
      background-image: url('<%= asset_data_uri "GitHub-Mark-29px.png" %>');
    }
  }
}


