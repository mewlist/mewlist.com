.contents
  %h2.title.page-header
    = link_to post.title, controller: :blog, action: :show, id: post.id
    %small.pull-right
      = post.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .body
    = @markdown.render( post.body ).html_safe
  .fb-like{"data-href" => "#{request.protocol}#{request.host_with_port}#{url_for(controller: :blog, action: :show, id: post.id)}", |
           "data-width"=> "The pixel width of the plugin", |
           "data-height"=> "The pixel height of the plugin", |
           "data-colorscheme"=> "light", |
           "data-layout"=> "standard", |
           "data-action"=> "like", |
           "data-show-faces"=> "false", |
           "data-send"=> "false"}
